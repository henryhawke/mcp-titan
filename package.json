{
  "name": "@henryhawke/mcp-titan",
  "version": "3.0.0",
  "description": "A neural memory system for LLMs that can learn and predict sequences while maintaining state",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "titan-memory": "./index.js"
  },
  "scripts": {
    "build": "bunx tsc",
    "start": "bun index.js",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "train-model": "bun run build && bun run dist/scripts/train-model.js",
    "train-quick": "bun run build && bun run dist/scripts/train-model.js --quick",
    "train-production": "bun run build && bun run dist/scripts/train-model.js --production",
    "download-data": "bun run build && bun run dist/scripts/download-data.js",
    "test-model": "bun run build && bun run dist/scripts/test-model.js",
    "lint": "bunx eslint . --max-warnings 0 --report-unused-disable-directives",
    "lint:fix": "bunx eslint . --fix --max-warnings 0 --report-unused-disable-directives",
    "format": "bunx prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "bunx prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "bunx tsc --noEmit",
    "clean": "bunx rimraf dist"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "private": false,
  "keywords": [
    "mcp",
    "memory",
    "llm",
    "claude",
    "cursor",
    "tensorflow",
    "neural"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@octokit/rest": "^22.0.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}